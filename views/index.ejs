        /* Scroll indicator styles */
        .mobile-scroll-indicator {
            display: none;
            position: absolute;
            bottom: -80px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 100;
            text-align: center;
        }
        
        .scroll-content {
            display: flex;
            flex-direction: column;
            align-items: center;
            cursor: pointer;
        }
        
        .scroll-text {
            color: #afafaf;
            font-size: 14px;
            margin-bottom: 8px;
            font-weight: 500;
            transition: transform 0.3s ease;
        }
        
        .scroll-icon {
            width: 50px;
            height: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(0,0,0,0.7);
            border-radius: 50%;
            animation: bounce 2s infinite;
            margin-bottom: 20px;
        }
        
        .scroll-icon svg {
            width: 24px;
            height: 24px;
            color: white;
        }
        
        /* Bounce animation */
        @keyframes bounce {
            0%, 20%, 50%, 80%, 100% {
                transform: translateY(0);
            }
            40% {
                transform: translateY(-10px);
            }
            60% {
                transform: translateY(-5px);
            }
        }
        
        /* Active state */
        .scroll-content:active .scroll-text {
            transform: translateY(3px);
        }
        
        .scroll-content:active .scroll-icon {
            transform: scale(0.95);
            background: rgba(0,0,0,0.9);
        }
        
        /* Show only on mobile */
        @media (max-width: 768px) {
            .mobile-scroll-indicator {
                display: block;
            }
            
            .description-inner {
                padding-bottom: 30px;
            }
        }
    </style>
