                        <% if (services.length > 0) { %>
                            <% services.forEach(service => { %>
                                <div class="service-card" style="background: white; border-radius: 12px; overflow: hidden; box-shadow: 0 5px 15px rgba(0,0,0,0.1); transition: transform 0.3s;">
